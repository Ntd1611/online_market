---
import Layout from '../layouts/Layout.astro';

// Mock data for recipes - would come from a CMS or database in production
const recipes = [
    {
        id: 1,
        title: 'Chả Cá Nướng Phô Mai',
        description: 'Món chả cá nướng phô mai thơm ngon, bổ dưỡng với Chả Cá Cheese Fish Tofu',
        cookTime: '20 phút',
        difficulty: 'Dễ',
        ingredients: [
            'Chả Cá Cheese Fish Tofu x 2 gói',
            'Rau xà lách',
            'Cà chua bi',
            'Sốt mayonnaise',
        ],
        steps: [
            'Chuẩn bị nướng chả cá ở 180°C trong 10 phút',
            'Cắt rau xà lách và cà chua bi',
            'Bày trí với sốt mayonnaise',
        ],
        image: '/images/cheesefishtofu.png'
    },
    {
        id: 2,
        title: 'Mì Xào Rau Củ Chay',
        description: 'Món mì xào rau củ thuần chay bổ dưỡng với Mì Rau Củ',
        cookTime: '15 phút',
        difficulty: 'Dễ',
        ingredients: [
            'Mì Rau Củ x 1 gói',
            'Cà rốt',
            'Bắp cải',
            'Hành lá',
        ],
        steps: [
            'Luộc mì theo hướng dẫn trên bao bì',
            'Xào rau củ với dầu ăn',
            'Trộn mì với rau củ đã xào',
        ],
        image: '/images/vege_noodle.png'
    }
];
---

<Layout title="Công Thức Nấu Ăn - Bảo Trâm Mart" description="Các công thức nấu ăn ngon với sản phẩm từ Bảo Trâm Mart">
    <div class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Công Thức Nấu Ăn
            </h1>
            <p class="mt-4 text-lg text-gray-500">
                Khám phá các món ngon với sản phẩm từ Bảo Trâm Mart
            </p>
        </div>

        <div class="grid gap-8 mt-12">
            {recipes.map((recipe) => (
                <Fragment key={recipe.id}>
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                        <div class="lg:flex">
                            <div class="lg:w-1/3 relative overflow-hidden">
                                <img 
                                    src={recipe.image} 
                                    alt={recipe.title}
                                    class="h-full w-full object-cover object-center lg:h-full transform hover:scale-105 transition-transform duration-300"
                                />
                                <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-4 lg:hidden">
                                    <div class="text-white">
                                        <h2 class="text-xl font-bold">{recipe.title}</h2>
                                        <div class="flex items-center mt-1 text-sm">
                                            <span>{recipe.cookTime}</span>
                                            <span class="mx-2">•</span>
                                            <span>{recipe.difficulty}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="p-6 lg:w-2/3 lg:p-8">
                                <div class="hidden lg:block">
                                    <div class="uppercase tracking-wide text-sm text-green-600 font-semibold flex items-center">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        {recipe.cookTime} • {recipe.difficulty}
                                    </div>
                                    <h2 class="mt-2 text-2xl font-bold text-gray-900 group-hover:text-green-600 transition-colors duration-200">
                                        {recipe.title}
                                    </h2>
                                </div>
                                <p class="mt-3 text-gray-600">{recipe.description}</p>
                                
                                <div class="mt-6">
                                    <h3 class="text-lg font-medium text-gray-900 flex items-center">
                                        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                        </svg>
                                        Nguyên Liệu
                                    </h3>
                                    <ul class="mt-2 space-y-1 text-gray-600">
                                        {recipe.ingredients.map((ingredient, idx) => (
                                            <Fragment key={idx}>
                                                <li class="flex items-center">
                                                    <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                                    </svg>
                                                    {ingredient}
                                                </li>
                                            </Fragment>
                                        ))}
                                    </ul>
                                </div>
                                
                                <div class="mt-6">
                                    <h3 class="text-lg font-medium text-gray-900 flex items-center">
                                        <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                        </svg>
                                        Các Bước Thực Hiện
                                    </h3>
                                    <ol class="mt-2 space-y-2 text-gray-600">
                                        {recipe.steps.map((step, idx) => (
                                            <Fragment key={idx}>
                                                <li class="flex">
                                                    <span class="font-bold mr-2">{idx + 1}.</span>
                                                    {step}
                                                </li>
                                            </Fragment>
                                        ))}
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </Fragment>
            ))}
        </div>
    </div>
</Layout>