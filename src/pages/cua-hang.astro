---
import Layout from '../layouts/Layout.astro';

const storeInfo = {
    address: '44 Phan Đình Phùng, Hải Châu, Đà Nẵng',
    phone: '0236 6288 099',
    hours: 'Thứ 2 - Chủ Nhật: 7:00 - 22:00',
    mapUrl: 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3834.2325043591284!2d108.20959847588626!3d16.066522084632503!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31421825f0d38577%3A0x9e4b705ce3081706!2sPhan%20Dinh%20Phung!5e0!3m2!1sen!2s!4v1701325463440!5m2!1sen!2s'
};
---

<Layout title="Thông Tin Cửa Hàng - Bảo Trâm Mart" description="Địa chỉ và thông tin liên hệ của Bảo Trâm Mart tại Đà Nẵng">
    <div class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Thông Tin Cửa Hàng
            </h1>
            <p class="mt-4 text-lg text-gray-500">
                Ghé thăm cửa hàng của chúng tôi
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Store Information -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="p-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">Liên Hệ</h2>
                    <div class="space-y-6">
                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-lg font-medium text-gray-900">Địa Chỉ</h3>
                                <p class="mt-1 text-gray-600">{storeInfo.address}</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-lg font-medium text-gray-900">Số Điện Thoại</h3>
                                <p class="mt-1 text-gray-600">
                                    <a href={`tel:${storeInfo.phone}`} class="hover:text-green-600">{storeInfo.phone}</a>
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="flex-shrink-0">
                                <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-lg font-medium text-gray-900">Giờ Mở Cửa</h3>
                                <p class="mt-1 text-gray-600">{storeInfo.hours}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div class="bg-white shadow-lg rounded-lg overflow-hidden h-[500px]">
                <iframe
                    src={storeInfo.mapUrl}
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                ></iframe>
            </div>
        </div>
    </div>
</Layout>